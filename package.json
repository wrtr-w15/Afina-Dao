{
  "name": "afina-dao-wiki",
  "version": "1.0.0",
  "description": "Afina DAO Wiki - Multi-language knowledge base platform",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "cd frontend && npm run dev",
    "start": "cd frontend && npm run start",
    "build": "cd frontend && npm run build",
    "install:all": "npm install && cd frontend && npm install",
    "clean": "rm -rf frontend/node_modules frontend/.next",
    "lint": "cd frontend && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "wait-on": "^9.0.3"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "wiki",
    "knowledge-base",
    "nextjs",
    "typescript",
    "i18n",
    "dao"
  ],
  "author": "Afina DAO",
  "license": "MIT"
}
